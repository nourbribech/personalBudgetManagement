<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.collections.FXCollections?>
<?import java.lang.String?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            style="-fx-background-color: #f8f9fa;">

    <!-- HEADER -->
    <top>
        <VBox spacing="5" style="-fx-padding: 20;">
            <Label text="Gestion des Catégories"
                   style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #47b14f;" />
            <Label text="Ajoutez, modifiez ou supprimez vos catégories"
                   style="-fx-text-fill: #666; -fx-font-size: 14px;" />
        </VBox>
    </top>

    <!-- CONTENT -->
    <center>
        <VBox spacing="20" style="-fx-padding: 20;">
            <!-- CATEGORY LIST -->
            <VBox spacing="8">
                <Label text="Liste des catégories"
                       style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #333;" />
                <TableView fx:id="categoryTable"
                           prefHeight="300"
                           style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-radius: 5;">
                    <columns>
                        <TableColumn text="Nom" prefWidth="200"/>
                        <TableColumn text="Type" prefWidth="100"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- ADD/EDIT FORM -->
            <HBox spacing="20">
                <VBox spacing="8">
                    <Label text="Nom de la catégorie"
                           style="-fx-font-weight: bold; -fx-text-fill: #333;" />
                    <TextField fx:id="categoryNameField"
                               promptText="Ex : Nourriture"
                               prefWidth="250"/>
                </VBox>

                <VBox spacing="8">
                    <Label text="Type"
                           style="-fx-font-weight: bold; -fx-text-fill: #333;" />
                    <ComboBox fx:id="categoryTypeCombo" prefWidth="150">
                        <items>
                            <FXCollections fx:factory="observableArrayList">
                                <String fx:value="Revenu"/>
                                <String fx:value="Dépense"/>
                            </FXCollections>
                        </items>
                    </ComboBox>
                </VBox>

                <VBox alignment="BOTTOM_CENTER">
                    <Button text="Ajouter / Modifier"
                            fx:id="saveCategoryButton"
                            style="-fx-background-color: #47b14f; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20;" />
                </VBox>
            </HBox>
        </VBox>
    </center>

    <!-- FOOTER BUTTONS -->
    <bottom>
        <HBox spacing="15" style="-fx-padding: 20; -fx-alignment: CENTER_RIGHT;">
            <Button text="Supprimer"
                    fx:id="deleteCategoryButton"
                    style="-fx-background-color: #d9534f; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20;" />

            <Button text="Fermer"
                    style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-background-radius: 5; -fx-padding: 10 20;" />
        </HBox>
    </bottom>

</BorderPane>
